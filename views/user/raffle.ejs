<style>
    #raffleHeader {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 65px;
        box-shadow: 0 -6px 8px rgba(0, 0, 0, 0.25);
        border-top: outset 1px rgba(255, 255, 255, 0.75);
        background: #ecf0f3;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-between;
        z-index: 99993;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    #raffleHeader h2 {
        font-size: 1.5rem;
        padding-left: 20px;
        color: lightskyblue;
        font-family: 'Rock Salt', cursive;
    }

    #raffleHeader i {
        color: lightskyblue;
        font-size: 2rem;
        padding-right: 20px;
    }

    .raffle-overlay {
        height: 0;
        width: 100%;
        position: fixed;
        z-index: 99950;
        left: 0;
        bottom: 0;
        overflow-x: hidden;
        background: #ecf0f3;
        transition: 0.5s;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        box-shadow: 0 -3px 5px rgba(0, 0, 0, 0.25);
        border-top: outset 1px rgba(255, 255, 255, 0.75);
    }

    .raffle-overlay-content {
        position: relative;
        bottom: 0;
        width: 100%;
        height: 200px;
        max-height: 200px;
        text-align: center;
    }

    .raffle-overlay p {
        text-decoration: none;
        font-size: 1.5rem;
        font-family: 'Rock Salt', cursive;
        color: lightskyblue;
        text-shadow: 0 0 5px rgba(127, 198, 241, 0.5);
        display: block;
        transition: ease-in 0.5s;

    }

    .raffle-overlay a {
        padding: 5px;
        text-decoration: none;
        font-size: 1.5rem;
        font-family: 'Rock Salt', cursive;
        color: lightskyblue;
        text-shadow: 0 0 5px rgba(127, 198, 241, 0.5);
        display: block;
        transition: ease-in 0.5s;
    }

    .raffle-overlay a:hover,
    .raffle-overlay a:focus {
        color: rgba(0, 0, 0, 0.5);
        text-shadow: 0 0 8px rgba(135, 206, 250, 0.75);
        transition: ease-in 0.5s;
    }

    .raffle-overlay .closebtn {
        position: absolute;
        top: 0;
        right: 20px;
        font-size: 2rem;
        z-index: 99940;
        font-size: 1.2rem;
    }

    .current-raffle-prize {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
    }

    .current-raffle-prize img {
        height: 150px;
        border-top-right-radius: 16px;
        border-bottom-right-radius: 16px;
        box-shadow: 4px 4px 6px #d1d9e6, -4px -4px 6px #ffffff;
    }

    .raffle-item-price {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
        margin-top: 50px;
    }

    .raffle-item-price button {
        padding: 5px;
        box-shadow: 4px 4px 6px #d1d9e6, -4px -4px 6px #ffffff;
        outline: none;
        border: none;
        font-family: 'Rock Salt', cursive;
        font-size: 1.2rem;
        color: lightskyblue;
        background: #ecf0f3;
        border-radius: 8px;
    }

    .current-raffle-prize-title {}

    .current-raffle-prize-title h5 {
        padding: 12px;
        font-size: 1.3rem;
    }

    #raffleCountdownClock {
        text-align: center;
    }

    #raffleCountdownClock p {
        text-align: center;
        font-size: 1rem;
    }
        .ticket {
        box-shadow: 4px 4px 6px #d1d9e6, -4px -4px 6px #ffffff;
        border-radius: 8px;
        margin: 0 auto;
        margin-bottom: 15px;
        width: 80%;
        padding: 10px;
        font-size: 1.3rem;
    }

</style>

<div class="page-title">
    <h1>
        <%= page %>
    </h1>
</div>


<div class="raffle-tickets">
    <ol>
        <% tickets.forEach(function(ticket) { %>
            <div class="ticket">
            <li>
                    <p>
                        <%= ticket.id %>
                    </p>
                </li>
            </div>
            <% }) %>
    </ol>
</div>

<div id="raffleContainer" class="raffle-overlay">
    <a href="javascript:void(0)" class="closebtn" onclick="closeRaffle()">&times;</a>
    <div id="currentRafflePrize" class="current-raffle-prize">
        <img src="https://process.fs.grailed.com/AJdAgnqCST4iPtnUxiGtTz/auto_image/cache=expiry:max/rotate=deg:exif/resize=height:700/output=quality:90/compress/https://cdn.fs.grailed.com/api/file/iqokqzEXQ52duGuolvS8"
            alt="">
        <div class="current-raffle-prize-title">
            <div class="raffle-item-price">
                <p><span class="original-price">$2150</span></p>
                <form action="/raffle/tickets/purchase" method="post">
                    <button>Buy Tickets</button>
                </form>
            </div>
            <h5>Dior Kim Jones KAWS velvet bomber jacket</h5>
            <div id="raffleCountdownClock">
                    <% if (ticketsLeft <= 0) { %>
                        <p>Tickets Left : <span id="ticketsRemaining">0</span></p>
                    <% } else { %>
                        <p>Tickets Left : <span id="ticketsRemaining"><%= ticketsLeft %></span></p>
                    <% } %>
            </div>
        </div>
    </div>

</div>
<div id="raffleHeader">
    <h2>Raffle</h2>
    <span onclick="openRaffle()"><i id="openRaffle" class="fa-solid fa-caret-up"></i></span>
</div>


<script>
    function openRaffle() {
        document.getElementById("raffleContainer").style.height = "300px";
        document.getElementById("openRaffle").style.opacity = 0;
    }

    function closeRaffle() {
        document.getElementById("raffleContainer").style.height = "0%";
        document.getElementById("openRaffle").style.opacity = 1;
    }
</script>