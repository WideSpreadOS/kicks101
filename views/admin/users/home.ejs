<style>

.user-list-container {
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.user-container {
    background: #ecf0f3;
    width: 80%;
    margin-bottom: 20px;
    padding: 5px;
    border-radius: 8px;
    box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
}
.user-container p {
    font-size: 1.2rem;
    padding: 8px;
}
.user-container a {
    padding: 8px;
    text-decoration: none;
    color: lightskyblue;
    margin-bottom: 10px;
}

.user-container-button {
    width: 50%;
    margin: 0 auto;
    margin-top: 20px;
    text-align: center;
    margin-bottom: 10px;
    background: #ecf0f3;
    border-radius: 6px;
    box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
}
.user-container-button button {
    background: #ecf0f3;
    width: 100%;
    outline: none;
    border: none;
    border-radius: 6px;
}
.user-container-button a {
    width: 100%;
}



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>

<%- include('../../partials/menus/admin-nav.ejs'); %>
<div class="admin-container">
    <div class="page-title">
        <h1>
            <%= page %>
        </h1>
    </div>


    <div class="user-list-container">
        <% users.forEach(function(user) { %>
            <div class="user-container">
                <p><%= user.fname %> <%= user.lname %></p>
                <a href="mailto:<%= user.email %>"><%= user.email %></a>
                <div class="user-container-button">
                    <button><a href="/admin/users/details/<%= user.id %>">Details</a></button>
                </div>
            </div>
        <% }) %>
    </div>

</div>