<style>
    .label-to-print {
        width: 4in;
        height: 2in;
        margin: 0 auto;
        position: relative;
    }
    .company-logo {
        position: absolute;
        top: 10px;
        right: 10px;
        height: 1in;
        width: 1in;
        z-index: 20;
    }
    .company-logo img {
        width: 1in;
    }
    .return-address {
        padding: 10px;
    }
    .shipping-address {
        text-align: center;
    }
    .shipping-address p {
        font-size: 1.1rem;    
    }
    .print-button {
        text-align: center;
        margin: 0 auto;
        margin-top: 40px;
        margin-bottom: 40px;
        box-shadow: -8px -4px 8px 0px #fff, 8px 4px 12px 0px #d1d0e6;
        width: 90%;
        border-radius: 16px;
        padding: 10px;
        outline: none;
        border: none;
    }
    .print-button button {
        border-radius: 16px;
        outline: none;
        border: none;
        width: 100%;
    }
    
</style>

<div class="page-title">
    <h1>Print Shipping Label</h1>
</div>


<div class="go-back-button">
    <a href="/admin/invoices/new/order/<%= order.id %>"><i class="fas fa-arrow-left"></i> Back to the Order</a>
</div>

<div class="label-to-print">
    <div class="company-logo">
        <img src="/images/logo_1a1a1c.png" alt="">
    </div>
    <div class="return-address">
        <p>Kicks101</p>
        <p>Street</p>
        <p>City, CT</p>
        <p>Zip</p>
    </div>

    <div class="shipping-address">

        <p>
            <%= order.unregistered_user.fname %>
                <%= order.unregistered_user.lname %>
        </p>
        <p>
            <%= order.unregistered_user.mailing_address.street %>
        </p>
        <% if (!order.unregistered_user.mailing_address.building_number) { %>
            <span style="display: none;"></span>
            <% } else { %>
                <p>Building Number: <%= order.unregistered_user.mailing_address.building_number %>
                </p>
                <% } %>
                    <% if (!order.unregistered_user.mailing_address.apartment_number) { %>
                        <span style="display: none;"></span>
                        <% } else { %>
                            <p>Apartment: <%= order.unregistered_user.mailing_address.apartment_number %>
                            </p>
                            <% } %>

                                <p>
                                    <%= order.unregistered_user.mailing_address.city %>, <%=
                                            order.unregistered_user.mailing_address.state %>
                                </p>
                                <p>
                                    <%= order.unregistered_user.mailing_address.zip %>
                                </p>
                                <p>
                                    <%= order.unregistered_user.mailing_address.special_instructions %>
                                </p>
    </div>
</div>

<div class="print-button">
    <button>Print</button>
</div>