<style>



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>

<%- include('../../partials/menus/admin-nav.ejs'); %>
<div class="admin-container">
    <div class="page-title">
        <h1>
            <%= page %>
        </h1>
    </div>

<%- include('../../partials/filters/admin-products.ejs'); %>

    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Item</th>
                    <th>Details</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% if(products.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <p style="text-align: center; font-size: 2rem;">No Items</p>
                        </td>
                    </tr>
                    <% } else { %>
                <% products.forEach(function(product) { %>
                    <tr>
                        <td>
                            <img class="admin-table-image" src="<%= product.main_image %>" />
                        </td>
                        <td>
                            <p style="font-size: 1.1rem; color: lightskyblue;">
                                <%= product.manufacturer.name %>
                            </p>
                            <p>
                                <%= product.name %>
                            </p>
                        </td>
                        <td>
                            <div class="item-card-button"><a href="/admin/products/details/<%= product.id %>"><i
                                        class="far fa-eye"></i></a></div>
                        </td>
                        <td>
                            <div class="item-card-button"><a href="/admin/products/edit/<%= product.id %>"><i
                                        class="far fa-edit"></i></a></div>
                        </td>
                    </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>


</div>